<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_result_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/conjure_purple_really_dark">


    <ImageView
        android:id="@+id/search_artist_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/search_artist_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:fontFamily="@font/nunito"
        android:padding="10sp"
        android:text="Artist"
        android:textAlignment="textStart"
        android:textColor="@color/conjure_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_artist_image"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>